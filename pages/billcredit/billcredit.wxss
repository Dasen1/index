/* pages/authentication/authentication.wxss */
.wrap_bet{
  min-height: 100vh;
  padding: 10px 30px;
  background-color: #c1c2c7;
  /* display: flex;
  justify-content: center; */
}
.approve{
  width: 260px;
  /* padding: 10px; */
  height: 66px;
  background-color: #fff;
  border-radius: 16px;
  margin: 0 auto;
}
.approve_x{
  display: flex;
  align-items: center;
  justify-content: center;
}
.approve_wire{
  width: 60px;
 border-bottom: 1px solid #c1c2c7;
}
.approve_text{
  text-align: center;
  font-size: 14px;
  font-weight: 600;
}
.approve_roude{
 display: flex;
 justify-content: center;
 align-items: center;
  width: 20px;
  height: 20px;
  background-color: #F2A72C;
  border-radius: 50%;
  font-size: 12px;
}
.vpn{
  background-color: #72EA72;
}
.approve_s{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  font-size: 12px;
}
.agreement{
  width: 295px;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 16px;
  box-sizing: border-box;
  padding: 10px;
  margin-top: 10px;
}
.agreement_text{
  text-align: center;
  padding-bottom: 10px ;
   font-size: 18px;
   font-weight: 600;
   border-bottom: 1px solid #c1c2c7;
}
.agreement_set{
  height:300px;
  overflow: auto;
  font-size: 14px;
}
.okay_cancel{
  margin-top: 6px;
 border-top: 1px solid #c1c2c7;

}
.flex_can{
  display: flex;
  justify-content: space-between;
  padding: 0 30px;

}
.okay{
  background-color: #a4adb3;
  color: #fff;
}
.turn{
  background-color: #0540B7;
  color: #fff;
}
.check_box{
  padding: 10px;
  font-size: 14px;
}