/* pages/mobilelogin/mobilelogin.wxss */

.wrap {
  padding: 40px;
}
.login_mb {
  font-size: 20px;
  color: #000;
  font-weight: 600;
  margin-bottom: 25px;
}
.weui-input {
  /* font-size: 18px; */
  width: 260px;
  height: 40px;
  border-radius: 4px;
  border: 1px solid #c3c3c3;
  margin-bottom: 20px;
  padding-left: 10px;
}
.btn {
  width: 100%;
  height: 40px;
  background-color: #07c160;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 4px;
  margin-top: 40px;
}
.phoneCode {
  display: flex;
  align-items: center;
}
.phoneCode input {
  width: 60%;
  /* margin: 20px; */
  border: 1px solid #c3c3c3;
  padding-left: 10px;
  height: 40px;
  border-radius: 4px;
}
.phoneCode button {
  height: 40px;
  vertical-align: middle;
  display: flex;
  justify-content: center;
  align-items: center;
}
.data-v{
  margin-top: 20px;
}
