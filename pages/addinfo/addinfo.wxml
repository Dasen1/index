  <view class="agreement" wx:else>
    <view class="add_info">法人及申请人信息</view>
    <form catchsubmit="formSubmitInfo" catchreset="formResetInfo">
      <view class="flex">
        <view class="flex_wid">法人本人申请</view>
        <radio-group bindchange="radioChange">
          <label class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">
            <view class="weui-cell__hd">
              <radio value="{{item.value}}" checked="true" />
            </view>
            <view class="weui-cell__bd">{{item.name}}</view>
          </label>
        </radio-group>
      </view>
      <view class="flex">
        <view class="flex_wid">法人姓名</view>
        <input class="weui-input" name="frName" placeholder="请输入" />
      </view>
      <view class="flex">
        <view class="flex_wid">法人证件类型</view>
