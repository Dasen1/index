      </view>
      <view class="flex">
        <view class="flex_wid">燃气公司</view>
        <picker name="input" class="weui-input" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">{{array[index]}}</view>
        </picker>
      </view>
      <view class="flex">
        <view class="flex_wid">营业执照期限</view>
        <input class="weui-input" name="certDueDate" placeholder="请输入" />
      </view>
      <view class="flex">
        <view class="flex_wid">行业类别</view>
        <input class="weui-input" name="tradeType" placeholder="请输入" />
      </view>
      <view class="flex">
        <view class="flex_wid">客户类别</view>
        <input class="weui-input" name="registerType" placeholder="请输入" />
      </view>
      <view class="flex">
        <view class="flex_wid">账户开户行行号</view>
        <input class="weui-input" name="accountNode" placeholder="请输入" />
      </view>
      <view class="flex">
        <view class="flex_wid">账户号</view>
        <input class="weui-input" name="accountNo" placeholder="请输入" />
      </view>
      <view class="flex">
        <view class="flex_wid">账户名</view>
        <input class="weui-input" name="accountName" placeholder="请输入" />
      </view>
